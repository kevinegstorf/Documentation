# Git branch in prompt.

parse_git_branch() {

	    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'

    }

    export PS1="\u@\h \W\[\033[1;36m\]\$(parse_git_branch)\[\033[1;32m\] ðŸ¦€  ðŸ³  "
    export PATH=$PATH:~/bin

# Elixer PATH

export PATH="$PATH:/path/to/elixir/bin"

